RewriteEngine On
RewriteCond %{HTTPS} !=on

#redirect html to php: https://stackoverflow.com/questions/5990240/redirect-all-html-extensions-to-php
RewriteRule ^(.*)\.html$ $1.php [L]

#remove .php extension
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

Options -Indexes

## EXPIRES CACHING ##
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType image/jpg "access 1 month"
ExpiresByType image/jpeg "access 1 month"
ExpiresByType image/gif "access 1 month"
ExpiresByType image/png "access 1 month"
#ExpiresByType text/css "access 1 month"
#ExpiresByType text/html "access 1 month"
ExpiresByType application/pdf "access 1 month"
ExpiresByType text/x-javascript "access 1 month"
ExpiresByType application/x-shockwave-flash "access 1 month"
ExpiresByType image/x-icon "access 1 year"
ExpiresDefault "access 1 month"
</IfModule>
## EXPIRES CACHING ##

# Redirects contact to my email
RewriteRule ^contact.php$ andrewmasonmedia@gmail.com [R,L]
# 301 redirect
Redirect 301 /contact andrewmasonmedia@gmail.com

# Set custom 404 error page
ErrorDocument 404 /404.html
ErrorDocument 403 /403.html

